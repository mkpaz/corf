<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>windows</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- runtime image -->
        <fileSet>
            <directory>${bld.runtimeImagesDirectory}/${bld.platform}</directory>
            <outputDirectory>app</outputDirectory>
        </fileSet>

        <!-- configurations & samples -->
        <fileSet>
            <directory>build/conf</directory>
            <outputDirectory>data</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>build/samples</directory>
            <outputDirectory>data</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- docs -->
        <fileSet>
            <directory>${bld.docsTargetDirectory}</directory>
            <outputDirectory>docs</outputDirectory>
            <includes>
                <include>**/*.html</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <!-- launcher & resources -->
        <file>
            <source>build/native/${bld.platform}.exe</source>
            <outputDirectory>.</outputDirectory>
            <destName>telekit.exe</destName>
        </file>
        <file>
            <source>build/user.options</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>build/telekit.ico</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>build/telekit.bat</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>build/LICENSE</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>

</assembly>