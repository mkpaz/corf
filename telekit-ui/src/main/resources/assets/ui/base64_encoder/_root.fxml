<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="10.0" prefHeight="768.0" prefWidth="1280.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.telekit.ui.tools.base64_encoder.RootController">
  <columnConstraints>
     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     <ColumnConstraints hgrow="NEVER" />
     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="ALWAYS" />
  </rowConstraints>
   <children>
      <Label text="Text:" />
      <Label text="Base64:" GridPane.columnIndex="2" />
      <TextArea fx:id="taText" prefHeight="200.0" prefWidth="200.0" styleClass="monospaced" GridPane.rowIndex="1" />
      <TextArea fx:id="taBase64" prefHeight="200.0" prefWidth="200.0" styleClass="monospaced" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Button mnemonicParsing="false" onAction="#encode" text="ENCODE &gt;&gt;" />
            <Button mnemonicParsing="false" onAction="#decode" text="DECODE &lt;&lt;" />
            <VBox spacing="10.0">
               <children>
                  <Label text="Mode:" />
                  <RadioButton fx:id="rbModeByLine" mnemonicParsing="false" selected="true" text="line-by-line">
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleMode" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rbModeAsText" mnemonicParsing="false" text="as text" toggleGroup="$toggleMode" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</GridPane>
