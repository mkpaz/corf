<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.telekit.desktop.tools.filebuilder.TemplateController">
   <children>
      <TabPane fx:id="tabPane" styleClass="no-menu-button">
         <tabs>
            <Tab closable="false" text="%Parameters">
               <content>
                  <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="NEVER" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" prefWidth="500.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="NEVER" />
                      <RowConstraints maxHeight="80.0" vgrow="NEVER" />
                      <RowConstraints vgrow="NEVER" />
                        <RowConstraints maxHeight="200.0" vgrow="ALWAYS" />
                        <RowConstraints maxHeight="80.0" vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                    </rowConstraints>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="3.0">
                           <children>
                              <Label text="%Name" />
                              <Label text="*" />
                              <Label text=":" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="3.0" GridPane.rowIndex="1">
                           <children>
                              <Label text="%tools.DocumentStart" />
                              <Label text=":" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="3.0" GridPane.rowIndex="4">
                           <children>
                              <Label text="%tools.DocumentEnd" />
                              <Label text=":" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="3.0" GridPane.rowIndex="2">
                           <children>
                              <Label text="%Delimiter" />
                              <Label text=":" />
                           </children>
                        </HBox>
                        <HBox GridPane.rowIndex="3">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="3.0">
                                 <children>
                                    <Label text="%tools.Element" />
                                    <Label text="*" />
                                    <Label text=":" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <TextField fx:id="tfName" GridPane.columnIndex="1" />
                        <TextArea fx:id="taHeader" styleClass="monospace" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextArea fx:id="taFooter" styleClass="monospace" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                               <ComboBox fx:id="cmbDelimiter" prefWidth="200.0">
                                   <items>
                                       <FXCollections fx:factory="observableArrayList">
                                           <String fx:value="" />
                                           <String fx:value="," />
                                           <String fx:value=":" />
                                           <String fx:value="|" />
                                           <String fx:value=";" />
                                           <String fx:value="\t" />
                                       </FXCollections>
                                   </items>
                                   <value>
                                       <String fx:value="" />
                                   </value>
                               </ComboBox>
                              <Label styleClass="text-sm" text="%tools.file-builder.applied-to-preview-only" />
                           </children>
                        </HBox>
                        <TextArea fx:id="taPattern" maxHeight="1.7976931348623157E308" styleClass="monospace" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <HBox alignment="CENTER_LEFT" spacing="3.0" GridPane.rowIndex="5">
                           <children>
                              <Label text="%FileFormat" />
                              <Label text=":" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                           <children>
                              <ComboBox fx:id="cmbEncoding" prefWidth="120.0">
                                 <tooltip>
                                    <Tooltip text="File Encoding" />
                                 </tooltip>
                              </ComboBox>
                              <ComboBox fx:id="cmbLineSeparator" prefWidth="120.0">
                                 <tooltip>
                                    <Tooltip text="Line Separator" />
                                 </tooltip>
                              </ComboBox>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </content>
            </Tab>
            <Tab closable="false" text="%Description">
              <content>
                  <StackPane>
                     <children>
                        <TextArea fx:id="taDescription" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </StackPane>
              </content>
            </Tab>
         </tabs>
      </TabPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnCommit" styleClass="form-action" defaultButton="true" mnemonicParsing="false" onAction="#commit" text="%action.OK" />
            <Button cancelButton="true" styleClass="form-action" mnemonicParsing="false" onAction="#cancel" text="%action.Cancel" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
