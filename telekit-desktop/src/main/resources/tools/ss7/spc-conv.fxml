<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.telekit.controls.glyphs.FontAwesomeIcon?>
<VBox fx:id="rootPane" spacing="10.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.telekit.desktop.tools.ss7.SPCConverterController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <ComboBox fx:id="cmbType" prefWidth="150.0" styleClass="left" />
                  <TextField fx:id="tfSpc" alignment="CENTER" maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefWidth="300.0" styleClass="right" />
               </children>
            </HBox>
            <Label text="%tools.ss7.specified-as" />
            <ComboBox fx:id="cmbFormat" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefWidth="150.0" />
            <Button fx:id="btnConvert" mnemonicParsing="false" onAction="#convert" styleClass="link-button">
               <graphic>
                  <StackPane alignment="BOTTOM_LEFT">
                     <children>
                        <FontAwesomeIcon glyphName="REFRESH" />
                     </children>
                  </StackPane>
               </graphic>
            </Button>
         </children>
      </HBox>
      <TextArea fx:id="taResult" editable="false" minHeight="300.0" styleClass="monospace" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
