<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.telekit.controls.glyphs.FontAwesomeIcon?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.telekit.desktop.tools.ss7.SPCConverterController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" styleClass="segmented-control" HBox.hgrow="ALWAYS">
               <children>
                  <ComboBox fx:id="cmbType" prefWidth="150.0" styleClass="left" />
                  <TextField fx:id="tfSpc" alignment="CENTER" maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefWidth="300.0" styleClass="right" />
               </children>
            </HBox>
            <Label text="%tools.ss7.specified-as" />
            <ComboBox fx:id="cmbFormat" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefWidth="150.0" />
            <Button fx:id="btnConvert" mnemonicParsing="false" onAction="#convert" styleClass="btn-icon">
               <graphic>
                  <StackPane alignment="BOTTOM_LEFT">
                     <children>
                        <FontAwesomeIcon glyphName="REFRESH" />
                     </children>
                  </StackPane>
               </graphic>
            </Button>
         </children>
      </HBox>
      <TextArea fx:id="taResult" editable="false" minHeight="300.0" styleClass="monospaced" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
